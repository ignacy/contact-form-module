---
slug: 'contact_form/messages'
layout_name: 'modules/contact_form/layouts/main'
---

{% query_graph 'modules/contact_form/get_messages' %}

<div class="flex mb-5">
    <div class="w-full h-12">

        <div class="flex items-center">
            <h2 class="flex items-center"> Messages </h2>
        </div>

        <br/>
        <br/>
        <br/>
        <br/>
        {% for message in g.customizations.results %}
            <div class="max-w-md w-full lg:flex mx-10">
                <div class="rounded overflow-hidden shadow-lg p-4 flex flex-col justify-center leading-normal">

                    <div class="mb-8">
                        <p class="text-grey-darker text-base">{{ message.content }}</p>
                    </div>
                    <div class="flex items-center">
                        <div class="text-sm">
                            <p class="text-black leading-none">{{ message.sender }}</p>
                            <p class="text-grey-dark">{{ message.created_at }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <br/>
        <br/>
        <br/>
    <a class="bg-transparent hover:bg-blue text-blue-dark font-semibold hover:text-white py-2 px-4 border border-blue hover:border-transparent rounded"
       href="/contact_form/new_message">New Message</a>
    </div>
</div>
